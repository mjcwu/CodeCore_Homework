<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
    <header class="bg-light p-2">
      <nav class="navbar p-0">
          <h4 class="text-primary ml-1 mb-0">Blog On Rails</h4>
        <div class="d-flex justify-content-end">
          <div class="m-2">
            <%= link_to 'Home', root_path %>
          </div>
          <div class="m-2 p-0">
            <%= link_to "New Post", new_post_path %>
          </div>
            <div class="m-2 p-0">
              <% if user_signed_in? %>
                Hello <%= link_to "#{current_user.name}", edit_user_path(current_user.id) %>,
              <%= link_to "Logout", sessions_path, method: :delete,
                data: {confirm: "are you sure you want to log out?"}%>
              <% else %>
            </div>
            <div class="m-2 p-0">
              <%= link_to "Login", new_sessions_path %>
            </div>
            <div class="m-2 p-0">
              <%= link_to "Sign Up", new_user_path %>
            </div>
          <% end %>
         
        </div>
      </nav>
    </header>
  <body>
    <%= yield %>
  </body>
</html>
